{
  "version": 2,
  "builds": [
    {
      "src": "social_media_api/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "social_media_api/wsgi.py"
    }
  ],
  "env": {
    "DEBUG": "False",
    "ALLOWED_HOSTS": "*.vercel.app",
    "DATABASE_URL": "@database_url"
  }
}
